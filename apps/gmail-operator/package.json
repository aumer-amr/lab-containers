{
  "name": "gmail-operator",
  "version": "0.0.1",
  "description": "Operator to handle rules and labels for gmail",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=16.9.1"
  },
  "scripts": {
    "build": "tsc -p ./src/tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "start": "node dist/index.js",
    "dev": "npx nodemon src/index.ts",
    "test:complete": "nyc ./node_modules/.bin/_mocha 'test/**/*.test.ts'",
    "test:mocked": "NODE_ENV=mocked nyc ./node_modules/.bin/_mocha 'test/**/*.test.ts'",
    "test": "npm run test:mocked"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aumer-amr/lab-containers/apps/gmail-operator/"
  },
  "author": "aumer-amr <aumer@aumer.dev>",
  "license": "GNU GPL v3.0",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testdeck/mocha": "^0.3.3",
    "@types/chai": "^4.3.6",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "prettier": "^3.0.3",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@dot-i/k8s-operator": "^1.3.8",
    "@kubernetes/client-node": "^0.18.1",
    "@promster/express": "^9.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^9.0.0",
    "googleapis": "^126.0.1",
    "prom-client": "^14.2.0"
  }
}
